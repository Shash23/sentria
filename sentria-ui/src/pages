// filepath: /Users/shashwatghevde/Documents/projects/askO11y/sentria/sentria-ui/src/pages/QueryPage.jsx
import React, { useState } from 'react';

const QueryPage = () => {
    const [query, setQuery] = useState('');
    const [response, setResponse] = useState('');

    const handleQuerySubmit = () => {
        // Logic to send the query to the backend and get a response
        // This is a placeholder for the actual implementation
        setResponse(`Response for: ${query}`);
    };

    return (
        <div>
            <h1>Ask Your Question</h1>
            <input 
                type="text" 
                value={query} 
                onChange={(e) => setQuery(e.target.value)} 
                placeholder="Type your question here..." 
            />
            <button onClick={handleQuerySubmit}>Submit</button>
            {response && <div><h2>Response:</h2><p>{response}</p></div>}
        </div>
    );
};

export default QueryPage;